Agent { background-color: black; min-width: 400; min-height: 200; }

Control--Panel { margin-top:1px; background: qlineargradient(x1:0, y1:0, x2:1, y2:1, stop:0 #2f2f2f, stop:1 #232323); border-bottom: 2px solid black;}

/*Control--Button               { min-height: 32px; min-width:32px; max-height: 32px; max-width: 32px; border: 0px; border-radius: 0px; }*/
Control--Button               { width: 100%; border: 0px; border-radius: 0px; }
Control--Button:hover         { background-color: rgba(255, 255, 255, 10%); }
Control--Button:hover:pressed { background-color: rgba(255, 255, 255, 5%); }

Control--Open_button         Icon { qproperty-iconFile: url(/qt/lib/theme/external_75.png); }
Control--Prev_button         Icon { qproperty-iconFile: url(/qt/lib/theme/prev_75.png);     }
Control--Play_button         Icon { qproperty-iconFile: url(/qt/lib/theme/play_75.png);     }
Control--Play_button#playing Icon { qproperty-iconFile: url(/qt/lib/theme/pause_75.png);    }
Control--Play_button#paused  Icon { qproperty-iconFile: url(/qt/lib/theme/play_75.png);     }
Control--Next_button         Icon { qproperty-iconFile: url(/qt/lib/theme/next_75.png);     }
Control--Repeat_button       Icon { qproperty-iconFile: url(/qt/lib/theme/repeat_75.png);   }

View--Info { background: qlineargradient(x1:0, y1:0, x2:1, y2:1, stop:0 #2f2f2f, stop:1 #232323); }
View--Info Artist_label { margin: 7px; color: grey; font: 16px; }
View--Info Title_label  { margin: 5px; color: white; font: bold 20px; }
View--Info Time_label   { margin: 5px; color: darkgrey; font: 12px; }
View--Info Progress_bar        { background-color: #4e2800; max-height: 3px; border-bottom: 1px solid black; border-radius: 0px; }
View--Info Progress_bar::chunk { background-color: #f88000; width: 1px; }

View--Playlist       { alternate-background-color: #232323; background-color: #232323; color: grey; font-size: 12px; border: 0px; }
View--Playlist::item { border-bottom: 2px solid black; }
View--Playlist::item:selected { color: white; show-decoration-selected:0; }

QHeaderView::section { spacing: 10px; background-color:lightblue; color: black; border: 0px; }

* { show-decoration-selected: 0 }
* { selection-background-color: #232323; }
