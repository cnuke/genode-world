source ${genode_dir}/repos/libports/run/qt5_common.inc

import_from_depot [depot_user]/src/qt5_component \
                  [depot_user]/src/qt5_declarative \
                  [depot_user]/src/qt5_graphicaleffects \
                  [depot_user]/src/qt5_svg \
                  [depot_user]/src/ubuntu_ui_toolkit \
                  [depot_user]/src/ubuntu_ui_toolkit_launcher \
                  [depot_user]/raw/ubuntu_themes

build {
	app/linphone-simple/plugins/ServiceControl
	app/linphone-simple/plugins/Linphone
	app/linphone-simple
}

#
# Generate config
#

append config {
<config>
	<parent-provides>}
append config [qt5_parent_provides]
append config {
	</parent-provides>
	<default caps="100"/>
	<default-route>
		<any-service> <parent/> <any-child/> </any-service>
	</default-route>}

append config [qt5_start_nodes]

append config {
	<start name="ubuntu-ui-toolkit-launcher" caps="1000">
		<resource name="RAM" quantum="200M"/>
		<config ld_verbose="yes">
			<vfs>
				<dir name="dev">
					<log/>
					<inline name="rtc">2018-01-01 00:01</inline>
				</dir>
				<dir name="pipe"> <pipe/> </dir>
				<tar name="qt5_declarative_qml.tar"/>
				<tar name="qt5_dejavusans.tar"/>
				<tar name="qt5_graphicaleffects_qml.tar"/>
				<tar name="qt5_libqgenode.tar"/>
				<tar name="qt5_libqjpeg.tar"/>
				<tar name="qt5_libqsvg.tar"/>
				<tar name="ubuntu-ui-toolkit_qml.tar"/>
				<tar name="ubuntu-themes.tar"/>
				<tar name="linphone-simple_qml.tar"/>
				<tar name="linphone-simple-linphone-plugin.tar"/>
				<tar name="linphone-simple-servicecontrol-plugin.tar"/>
				<!-- LocalStorage -->
				<dir name=".local">
					<dir name="share">
						<dir name="linphone.cibersheep">
							<ram/>
						</dir>
					</dir>
				</dir>
			</vfs>
			<libc stdout="/dev/log" stderr="/dev/log" pipe="/pipe" rtc="/dev/rtc"/>
			<arg value="ubuntu-ui-toolkit-launcher"/>
			<arg value="/linphone-simple/qml/dialer-app.qml"/>
			<env key="QT_SCALE_FACTOR" value="1"/>
			<env key="QT_DEBUG_PLUGINS" value="1"/>
		</config>
		<route>
			<service name="Gui"> <child name="nitpicker"/> </service>
			<service name="Report" label="shape">
				<child name="pointer" label="wm -> ubuntu-ui-toolkit-launcher -> shape"/>
			</service>
			<service name="ROM" label="mesa_gpu_drv.lib.so">
				<parent label="mesa_gpu-softpipe.lib.so" />
			</service>
			<any-service> <parent /> <any-child/> </any-service>
		</route>
	</start>
</config>
}

install_config $config

#
# Boot modules
#

append boot_modules [qt5_boot_modules]

append boot_modules " linphone-simple_qml.tar "
append boot_modules " linphone-simple-linphone-plugin.tar "
append boot_modules " linphone-simple-servicecontrol-plugin.tar "
append boot_modules " liblinphoneplugin.lib.so "
append boot_modules " libservicecontrolplugin.lib.so "

build_boot_image $boot_modules

run_genode_until forever
